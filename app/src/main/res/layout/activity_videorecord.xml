
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brlf.brvideorecord.VideoRecordActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="#4D000000"
        android:id="@+id/relativelayout">

        <Button
            android:id="@+id/switchButton"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/change" />

        <Button
            android:id="@+id/flashButto"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/flashlight_off"
            android:visibility="visible"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/closeButton"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/close_video"
            android:elevation="0dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4D000000"
        android:id="@+id/bottomView">

        <Button
            android:id="@+id/takeButton"
            android:layout_width="105sp"
            android:layout_height="105sp"
            android:background="@drawable/video_record"
            android:layout_alignTop="@+id/local"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27sp"
            android:textColor="#FFFFFF"
            android:text="00:00"/>

        <RelativeLayout
            android:layout_width="85sp"
            android:layout_height="85sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/local"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/localImageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/localTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/localImageview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="本地视频"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/localButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
